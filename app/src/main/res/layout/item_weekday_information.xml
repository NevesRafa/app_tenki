<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/weekday_weather_forecast_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jost"
        android:text="Wednesday"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@id/image_weather_forecast_1"
        app:layout_constraintEnd_toEndOf="@id/image_weather_forecast_1"
        app:layout_constraintStart_toStartOf="@id/weather_forecast_1"
        app:layout_constraintTop_toTopOf="@id/shape_weather_forecast"
        tools:textColor="@color/black" />

    <TextView
        android:id="@+id/weather_forecast_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/jost"
        android:text="22Â°\nRain"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/shape_weather_forecast"
        app:layout_constraintEnd_toEndOf="@id/shape_weather_forecast"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/shape_weather_forecast"
        app:layout_constraintTop_toBottomOf="@id/weekday_weather_forecast_1"
        tools:textColor="@color/black" />

    <ImageView
        android:id="@+id/image_weather_forecast_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/rain"
        app:layout_constraintBottom_toBottomOf="@id/shape_weather_forecast"
        app:layout_constraintStart_toEndOf="@id/weather_forecast_1"
        app:layout_constraintTop_toBottomOf="@id/weekday_weather_forecast_1" />


</androidx.constraintlayout.widget.ConstraintLayout>